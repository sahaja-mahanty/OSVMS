<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#696969"
    tools:context=".ValHome" >
  <Button
             android:id="@+id/btnTransport"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/btnEducation"
             android:layout_centerVertical="true"
             android:background="@drawable/blue_btn_drawable"
             android:text="TRANSPORTATION"
             android:textColor="@android:color/black"
             android:textSize="20sp" />

         <Button
             android:id="@+id/btnGovt"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/btnTransport"
             android:layout_below="@+id/btnTransport"
             android:layout_marginTop="27dp"
             android:background="@drawable/blue_btn_drawable"
             android:text="GOVT POLICY"
             android:textColor="@android:color/black"
             android:textSize="20sp" />

         <Button
             android:id="@+id/btnEducation"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_above="@+id/btnTransport"
             android:layout_alignLeft="@+id/btnHealth"
             android:layout_marginBottom="36dp"
             android:background="@drawable/blue_btn_drawable"
             android:text="EDUCATION"
             android:textColor="@android:color/black"
             android:textSize="20sp" />

         <Button
             android:id="@+id/btnHealth"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_above="@+id/btnEducation"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="26dp"
             android:background="@drawable/blue_btn_drawable"
             android:text="HEALTH CARE"
             android:textColor="@android:color/black"
             android:textSize="20sp" />


</RelativeLayout>
